<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listings Details:</h3>
  </div>
</div>

<div class="card col-6 offset-3 show-card">
  <img src="<%= (typeof listing.image === 'object' ? listing.image.url : listing.image) || 'https://via.placeholder.com/300x200?text=No+Image' %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
      <b><%= listing.title %></b> <br>
      <%= listing.description %> <br>
      â‚¹<%= listing.price?.toLocaleString("en-IN") || "N/A" %>/night <br>
      <%= listing.location %> <br>
      <%= listing.country %>
    </p>
  </div>
</div>

<br>

<div class="btns">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
  <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark offset-5">DELETE</button>
  </form>
</div>
