<% layout("/layouts/boilerplate") %>

<body>
    <h3>All Listings</h3>

    <!-- <form method="GET" action="/listings/new">
        <button>Create New listing</button>
    </form> -->

    <!-- ðŸ”§ CHANGED (before): Added class 'g-4' for gap between cards -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4"> 
        <% for(let listing of allListings){ %>
        <!-- ðŸ”§ CHANGED (now): Moved <a> inside 'col' and wrapped around the card to avoid invalid HTML nesting -->
        <div class="col"> 
            <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
                <!-- ðŸ”§ CHANGED (before): Removed fixed width and added 'h-100' to stretch height -->
                <div class="card h-100"> 
                    <!-- ðŸ”§ fallback added for missing image -->
                    <img src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>" class="card-img-top" alt="Listing Image" style="height: 20rem;">  
                    <div class="card-img-overlay"></div>

                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</body>
